# sudo systemctl enable <filename>

[Unit]
Description=Personal Finance Webapp
After=multi-user.target

[Service]
User=pi
Group=pi
Type=idle
ExecStart=/home/pi/venvs/grackle/bin/python3 /home/pi/extras/grackle/run.py -lvl debug
WorkingDirectory=/home/pi/extras/grackle
Restart=on-failure

[Install]
WantedBy=multi-user.target